<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Kelola Bibit</title>
  </style>
</head>
<body>
    <a href="/" class="back-home">Kembali ke Home</a>
  <h1>Mengelola Bibit</h1>
  
  <form action="/bibit/add" method="POST">
    <input type="text" name="nama" placeholder="Nama Bibit" required>
    <input type="text" name="jenis" placeholder="Jenis">
    <input type="number" name="harga" placeholder="Harga">
    <button type="submit">Tambah</button>
  </form>

  <ul>
    <% data.forEach(item => { %>
      <li>
        <%= item.nama %> (<%= item.jenis %> - harga: <%= item.harga %>)
        
        <a href="/bibit/delete/<%= item.id %>">Hapus</a>
        
        <form action="/bibit/update/<%= item.id %>" method="POST" style="display: inline;">
          <input type="text" name="nama" value="<%= item.nama %>" required>
          <input type="text" name="jenis" value="<%= item.jenis %>">
          <input type="number" name="harga" value="<%= item.harga %>">
          <button type="submit">Update</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
